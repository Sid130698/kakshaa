<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnnouncementActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:backgroundTint="@color/color2"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/for_edit_text_bck"
            android:textAlignment="textStart"
            android:gravity="start"
            android:hint="Put Announcement Here...."
            android:paddingTop="13dp"
            android:paddingBottom="10dp"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:layout_gravity="start"
            android:layout_margin="52dp"
            android:id="@+id/announcementEditText"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:background="@drawable/for_edit_text_bck"
            android:backgroundTint="@color/color1"
            android:paddingLeft="44dp"
            android:paddingRight="44dp"

            android:onClick="postThisAnnouncement"/>

    </LinearLayout>


</RelativeLayout>